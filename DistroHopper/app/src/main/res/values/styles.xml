<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="HoloDialogTheme" parent="android:Theme.Holo.Wallpaper">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:actionBarStyle">@style/actionbar_solid</item>
    </style>

    <style name="AboutTheme" parent="DialogTheme">
    </style>

    <style name="ContributeTheme" parent="DialogTheme">
    </style>

    <style name="PreferencesTheme" parent="HoloDialogTheme">
    </style>

    <style name="ThemePreferencesTheme" parent="DialogTheme">
    </style>

    <style name="LensPreferencesTheme" parent="DialogTheme">
    </style>

    <style name="actionbar_solid" parent="android:Widget.ActionBar">
        <item name="android:background">@color/transparentblack10</item>
        <item name="android:icon">@color/transparent</item>
    </style>

    <style name="textshadow_2px_black" parent="android:TextAppearance.Holo.Widget.TextView">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="honourable_mentions_name" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="developer_by" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">17sp</item>
    </style>

</resources>
